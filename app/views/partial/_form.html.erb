<body class="white">
	<main style="padding-top: 1rem">
		<section id="login">
			<div class="container-fluid pt-4">
				<div class="row">
					<div class="col s12 offset-s-1">
						<div class="login-form">
							<div class="card hoverable">
								<div class="card-content">
									<span class="card-title center"><h3><b>Posting Berita Baru</b></h3></span>
									<div class="divider"></div></br>

									<%= simple_form_for @post, :html => { :multipart => true } do |p| %>

									<div class="form-input row">
										<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
										<br>
										<br>
										<div class="input-field">
											<%= p.input :title, autofocus: true %>
										</div>
										<div class="textarea">
											<%= p.input :description %>
										</div>
										<div class="input-field">
											<%= p.input :author %>
										</div>
										<div class="actions center">
											<%= p.button :submit, class: "btn waves-effect waves-light pink darken-1" %>
										</div>
										<% end %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</body>
