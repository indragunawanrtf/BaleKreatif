<div class="row">
	<% @program.each do |p| %>
	<%= link_to p do %>
	<div class="col s6 m3">
		<div class="card small">
			<div class="card-image waves-effect waves-block waves-light">
				<%= image_tag p.image.url %>
			</div>
			<div class="card-content">
				<span class="card-title grey-title text-darken-4">
					<h6><b><%= p.title %></b></h6>
					<h6 class="black-text"><%= p.author %></h6>
					<h6 class="black-text"><%= I18n.l(p.created_at.to_date)%></h6>
				</span>	
			</div>
		</div>
	</div>
	<% end %>
	<% end %>
</div>